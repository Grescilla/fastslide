# Include build system files
include pyproject.toml
include meson.build
include meson_options.txt

# Include license and documentation
include LICENSE
include README_PUBLIC.md

# Include all source files
recursive-include src *.cpp *.c
recursive-include include *.h *.hpp

# Include third-party vendored code
recursive-include third_party *.cpp *.c *.h *.hpp

# Include subproject wraps for dependency management
recursive-include subprojects *.wrap

# Exclude build artifacts and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
prune builddir
prune .git

